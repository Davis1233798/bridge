# 同步器設定
SYNC_INTERVAL=1000  # 1秒輪詢一次
UPDATE_COLUMN=updated_at  # 更新時間欄位名稱
LOG_LEVEL=info

# 客戶端資料庫設定
CLIENT_DB_TYPE=mssql  # mariadb, mssql, postgres, etc.
CLIENT_DB_HOST=100.80.140.65
CLIENT_DB_PORT=1433
CLIENT_DB_USER=efast
CLIENT_DB_PASSWORD=a126182900
CLIENT_DB_DATABASE=TEST1

# 伺服器端資料庫設定 (雲端)
SERVER_DB_TYPE=mariadb  # mariadb, mssql, postgres, etc.
SERVER_DB_HOST=localhost
SERVER_DB_PORT=3306
SERVER_DB_USER=root
SERVER_DB_PASSWORD=root
SERVER_DB_DATABASE=test

# 客戶端到伺服器端同步設定
CLIENT_TO_SERVER_LISTEN_TABLE=test_polling    # 客戶端監聽的表名
CLIENT_TO_SERVER_SYNC_TABLE=test_syncing      # 同步到伺服器端的表名

# 伺服器端到客戶端同步設定
SERVER_TO_CLIENT_LISTEN_TABLE=test_polling    # 伺服器端監聽的表名
SERVER_TO_CLIENT_SYNC_TABLE=test_syncing      # 同步到客戶端的表名

# 批次處理設定
BATCH_SIZE=1000
MAX_RETRY_ATTEMPTS=3

# 進程守護設定
DAEMON_MODE=false  # 是否以守護進程模式執行
PID_FILE=./db_syncer.pid  # PID 檔案路徑

# 表結構快取設定
SCHEMA_CACHE_ENABLED=true                    # 是否啟用表結構快取
SCHEMA_CACHE_FILE=./cache/table_schemas.json # 表結構快取檔案路徑
SCHEMA_CACHE_TTL=3600000                     # 快取有效期（毫秒，1小時）

# MSSQL 特殊設定
MSSQL_ENCRYPT=true
MSSQL_TRUST_SERVER_CERTIFICATE=true
MSSQL_CONNECTION_TIMEOUT=30000
MSSQL_REQUEST_TIMEOUT=30000
MSSQL_POOL_MAX=10
MSSQL_POOL_MIN=0
MSSQL_POOL_IDLE_TIMEOUT=30000

# MariaDB/MySQL 特殊設定
MYSQL_CONNECTION_LIMIT=10
MYSQL_ACQUIRE_TIMEOUT=60000
MYSQL_TIMEOUT=60000
MYSQL_RECONNECT=true
MYSQL_CHARSET=utf8mb4
MYSQL_TIMEZONE=local

# PostgreSQL 特殊設定
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=2000
POSTGRES_SSL=false 